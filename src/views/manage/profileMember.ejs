            $("#ifsc").text(sanitizeValue(bankData?.chi_nhanh));
            $("#name_bank").text(sanitizeValue(bankData?.name_bank));
            if (bankData.upi_image) {
              $("#upi_image")
                .attr("src", "/uploads/" + sanitizeValue(bankData?.upi_image))
                .css("height", "150px")
                .css("width", "150px")
                .show();
